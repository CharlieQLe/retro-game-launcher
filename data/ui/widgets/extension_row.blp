using Gtk 4.0;
using Adw 1;

template ExtensionRow : Adw.EntryRow {
    title: "File extension";
    show-apply-button: true;

    [suffix]
    Gtk.Button {
        valign: center;
        icon-name: "user-trash-symbolic";
        clicked => on_remove_btn_clicked();

        styles [ "destructive-action" ]
    }
}